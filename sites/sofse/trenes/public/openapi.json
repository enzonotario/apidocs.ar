  "components": {
    "schemas": {
      "Linea": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID de la línea"
          },
          "nombre": {
            "type": "string",
            "description": "Nombre de la línea"
          },
          "color": {
            "type": "string",
            "description": "Color de la línea en formato hexadecimal"
          }
        }
      },
      "Estacion": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID de la estación"
          },
          "nombre": {
            "type": "string",
            "description": "Nombre de la estación"
          },
          "linea": {
            "type": "integer",
            "description": "ID de la línea a la que pertenece esta estación"
          },
          "ramal": {
            "type": "integer",
            "description": "ID del ramal al que pertenece esta estación"
          },
          "ubicacion": {
            "type": "object",
            "properties": {
              "lat": {
                "type": "number",
                "format": "double",
                "description": "Coordenada de latitud"
              },
              "lon": {
                "type": "number",
                "format": "double",
                "description": "Coordenada de longitud"
              }
            }
          }
        }
      },
      "Horarios": {
        "type": "object",
        "properties": {
          "results": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "desde": {
                  "type": "object",
                  "properties": {
                    "llegada": {
                      "type": "string",
                      "format": "time",
                      "description": "Hora de llegada"
                    },
                    "salida": {
                      "type": "string",
                      "format": "time",
                      "description": "Hora de salida"
                    }
                  }
                },
                "hasta": {
                  "type": "object",
                  "properties": {
                    "llegada": {
                      "type": "string",
                      "format": "time",
                      "description": "Hora de llegada"
                    },
                    "salida": {
                      "type": "string",
                      "format": "time",
                      "description": "Hora de salida"
                    }
                  }
                },
                "linea": {
                  "type": "integer",
                  "description": "ID de la línea"
                },
                "ramal": {
                  "type": "integer",
                  "description": "ID del ramal"
                },
                "cabeceraFinal": {
                  "type": "integer",
                  "description": "ID de la estación de destino final"
                }
              }
            }
          }
        }
      },
      "HorariosGroups": {
        "type": "object",
        "description": "Información de horarios agrupados"
      },
      "Alerta": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID de la alerta"
          },
          "titulo": {
            "type": "string",
            "description": "Título de la alerta"
          },
          "descripcion": {
            "type": "string",
            "description": "Descripción de la alerta"
          },
          "tipo": {
            "type": "string",
            "description": "Tipo de alerta"
          },
          "fechaInicio": {
            "type": "string",
            "format": "date-time",
            "description": "Fecha y hora de inicio de la alerta"
          },
          "fechaFin": {
            "type": "string",
            "format": "date-time",
            "description": "Fecha y hora de finalización de la alerta"
          },
          "linea": {
            "type": "integer",
            "description": "ID de la línea relacionada con esta alerta"
          }
        }
