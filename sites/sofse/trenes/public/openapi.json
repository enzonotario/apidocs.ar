            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "hasta",
            "in": "query",
            "description": "ID de la estación de destino",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "fields",
            "in": "query",
            "description": "Campos a incluir en la respuesta",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "lineas",
            "in": "query",
            "description": "Filtrar por números de línea específicos",
            "schema": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            "style": "form",
            "explode": true
          },
          {
            "name": "ramales",
            "in": "query",
            "description": "Filtrar por números de ramal específicos",
            "schema": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            "style": "form",
            "explode": true
          },
          {
            "name": "cabeceraFinal",
            "in": "query",
            "description": "Filtrar por IDs de destino final",
            "schema": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            "style": "form",
            "explode": true
          },
          {
            "name": "servicio",
            "in": "query",
            "description": "Tipo de servicio",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "fecha",
            "in": "query",
            "description": "Fecha para el horario",
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "tipo",
            "in": "query",
            "description": "Tipo de horario",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Número máximo de resultados a devolver",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Horarios de trenes",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Horarios"
                }
              }
            }
          },
          "404": {
            "description": "Estación no encontrada"
          }
        }
      }
    },
